
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - Boitoan</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@400;600;800&display=swap" rel="stylesheet" />

    <!-- Delogis & Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/vendors/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/vendors/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/assets/css/delogis.css" />
    <link rel="stylesheet" href="~/assets/css/delogis-color-1.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="custom-cursor" style="font-family: 'Lexend', sans-serif;">
    <!-- Header -->
    <header class="main-header-four">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Admin/Index">Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar"
                        aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="adminNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Admin/Index">Admin Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Admin/Tests/Index">Quản lý kiểm tra</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Index">Trang Người Dùng</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <div class="d-flex">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span style="color: #fff; font-weight: 500;">
                                    Welcome, @User.Identity.Name
                                </span>
                                <a href="/Account/LoginRegister?handler=Logout"
                                   class="btn btn-danger btn-sm"
                                   style="margin-left: 10px;">
                                    Đăng xuất
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center py-4 bg-light border-top">
        <div class="container">
            <p class="mb-0">&copy; 2025 Boitoan Admin - <a asp-page="/Privacy" class="text-decoration-none">Privacy</a></p>
        </div>
    </footer>

    <!-- JS Vendors -->
    <script src="~/assets/vendors/jquery/jquery-3.6.0.min.js"></script>
    <script src="~/assets/vendors/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
