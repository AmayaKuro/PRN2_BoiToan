@page
@model CreateTestModel
@{
    ViewData["Title"] = "Create Test";
}

<style>
    .crud-card {
        border: none;
        border-radius: 1.2rem;
        box-shadow: 0 4px 24px rgba(44,62,80,0.10);
        background: linear-gradient(135deg, #f8fafc 60%, #e3e9f7 100%);
        margin: 2rem auto;
        max-width: 500px;
        padding: 2.5rem 2rem 2rem 2rem;
    }

    .crud-title {
        font-weight: 700;
        color: #2c3e50;
        text-shadow: 1px 2px 8px #e0e0e0;
        margin-bottom: 2rem;
        text-align: center;
    }

    .add-btn {
        background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
        color: #fff;
        border: none;
    }

        .add-btn:hover {
            background: linear-gradient(90deg, #38f9d7 0%, #43e97b 100%);
            color: #fff;
        }

    .cancel-btn {
        background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
        color: #fff;
        border: none;
    }

        .cancel-btn:hover {
            background: linear-gradient(90deg, #2575fc 0%, #6a11cb 100%);
            color: #fff;
        }
</style>

<div class="crud-card">
    <h2 class="crud-title">Create Test</h2>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Test.Method" class="form-label"></label>
            <select asp-for="Test.Method" class="form-select" asp-items="Html.GetEnumSelectList<Boitoan.DAL.Entities.TestMethod>()"></select>
        </div>
        <div class="mb-3">
            <label asp-for="Test.Author" class="form-label"></label>
            <input asp-for="Test.Author" class="form-control" />
        </div>
        <button type="submit" class="btn add-btn px-4 me-2"><i class="bi bi-plus-circle"></i> Create</button>
        <a asp-page="Index" class="btn cancel-btn px-4">Cancel</a>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
}