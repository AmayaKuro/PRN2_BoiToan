@page "{id}"
@model DeleteTestModel
@{
    ViewData["Title"] = "Delete Test";
    Layout = "_AdminLayout";
}

<style>
    .crud-card {
        border: none;
        border-radius: 1.2rem;
        box-shadow: 0 4px 24px rgba(44,62,80,0.10);
        background: linear-gradient(135deg, #f8fafc 60%, #e3e9f7 100%);
        margin: 2rem auto;
        max-width: 500px;
        padding: 2.5rem 2rem 2rem 2rem;
        text-align: center;
    }
    .crud-title {
        font-weight: 700;
        color: #ff5858;
        text-shadow: 1px 2px 8px #e0e0e0;
        margin-bottom: 2rem;
    }
    .delete-btn {
        background: linear-gradient(90deg, #ff5858 0%, #f09819 100%);
        color: #fff;
        border: none;
    }
    .delete-btn:hover {
        background: linear-gradient(90deg, #f09819 0%, #ff5858 100%);
        color: #fff;
    }
    .cancel-btn {
        background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
        color: #fff;
        border: none;
    }
    .cancel-btn:hover {
        background: linear-gradient(90deg, #2575fc 0%, #6a11cb 100%);
        color: #fff;
    }
</style>

<div class="crud-card">
    <h2 class="crud-title"><i class="bi bi-exclamation-triangle"></i> Delete Test</h2>
    <div>
        <h4>Are you sure you want to delete this test?</h4>
        <div><strong>@Model.Test.Method</strong> by @Model.Test.Author</div>
        <form method="post" class="mt-4">
            <input type="hidden" asp-for="Test.Id" />
            <button type="submit" class="btn delete-btn px-4 me-2"><i class="bi bi-trash"></i> Delete</button>
            <a asp-page="Index" class="btn cancel-btn px-4">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
}